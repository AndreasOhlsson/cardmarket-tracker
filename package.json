{
  "name": "cardmarket-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Track MTG card prices from Cardmarket and get notified of deals via Slack",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:web": "cd web && npm run build",
    "build:all": "yarn build && yarn build:web",
    "start": "node dist/index.js",
    "start:dashboard": "tsx server/api.ts",
    "dev:server": "tsx watch server/api.ts",
    "dev:web": "cd web && npm run dev",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:web\"",
    "seed": "tsx src/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'server/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' 'server/**/*.ts'"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "dotenv": "^16.4.0",
    "express": "^5.2.1",
    "stream-json": "^1.9.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/stream-json": "^1.7.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.2.0"
  }
}
